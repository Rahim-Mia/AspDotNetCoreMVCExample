@model AspDotNetCoreMVCExample.Models.Student
<form asp-action="Create" asp-controller="Student" method="post">
    

    <div class="form-group row mb-2">
        <label asp-for="Name" class="col-md-2 col-form-label"></label>
        <div class="col-md-6">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label asp-for="Age" class="col-md-2 col-form-label"></label>
        <div class="col-md-6">
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label asp-for="Mobile" class="col-md-2 col-form-label"></label>
        <div class="col-md-6">
            <input asp-for="Mobile" class="form-control" />
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label asp-for="Email" class="col-md-2 col-form-label"></label>
        <div class="col-md-6">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label asp-for="Gender" class="col-md-2 col-form-label"></label>
        <div class="col-md-6">
            <input asp-for="Gender" class="form-control" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>

    
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-success">Create Student</button>
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>
</form>